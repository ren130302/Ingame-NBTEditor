{
    "multipart": [
        {   "when": { "north": false, "east": false, "south": false, "west": false },
            "apply": { "model": "meshi:block/ranma_post" }
        },
        {   "when": { "north": true, "east": false, "south": false, "west": false },
            "apply": { "model": "meshi:block/ranma_cap" }
        },
        {   "when": { "north": false, "east": true, "south": false, "west": false },
            "apply": { "model": "meshi:block/ranma_cap", "y": 90 }
        },
        {   "when": { "north": false, "east": false, "south": true, "west": false },
            "apply": { "model": "meshi:block/ranma_cap_alt" }
        },
        {   "when": { "north": false, "east": false, "south": false, "west": true },
            "apply": { "model": "meshi:block/ranma_cap_alt", "y": 90 }
        },
        {   "when": { "north": true },
            "apply": { "model": "meshi:block/ranma_side" }
        },
        {   "when": { "east": true },
            "apply": { "model": "meshi:block/ranma_side", "y": 90 }
        },
        {   "when": { "south": true },
            "apply": { "model": "meshi:block/ranma_side_alt" }
        },
        {   "when": { "west": true },
            "apply": { "model": "meshi:block/ranma_side_alt", "y": 90 }
        }
    ]
}
